<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/accelerometer_layout_ID">

    <TextView
            android:id="@+id/connectionStatusAccelerometer"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_marginHorizontal="30dp"
            android:layout_marginTop="39dp"
            android:layout_marginBottom="30dp"
            android:background="@drawable/rounded_edge"
            android:gravity="center"
            android:text="Connected"
            android:textColor="@color/dark_pink_theme"
            android:textSize="18sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

    <LinearLayout
            android:id="@+id/linearLayout3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="vertical"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">


        <ImageView
                android:id="@+id/image_view_accelerometer_image_ID"
                android:layout_width="150dp"
                android:layout_height="150dp"
                android:background="@drawable/ic_coordinates" />


        <TextView
                android:id="@+id/image_view_accelerometer_text_field"
                android:layout_width="150dp"
                android:textAlignment="textStart"
                android:layout_height="wrap_content"
                android:layout_marginTop="40dp"
                android:text="Offline "
                android:textSize="16sp" />

    </LinearLayout>


</androidx.constraintlayout.widget.ConstraintLayout>